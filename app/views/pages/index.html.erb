<div>
  <table>
    <%= link_to "New Page", new_page_path  %>
    <tr>
      <td>Title</td>
      <td>Body</td>
      <td>Action</td>
    </tr>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title  %></td>
        <td><%= page.body  %></td>
        <td>
        <%= link_to("Show", page_path(page)) %> 
        <%= link_to("edit", edit_page_path(page)) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>